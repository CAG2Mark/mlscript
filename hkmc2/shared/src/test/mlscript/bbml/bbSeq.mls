fun mapi_force: [A, E] -> Seq[out A, out E] -> ((Int, A) ->{E} A) ->{E} Seq[out A, Nothing]
fun mapi_force = s => f =>
  region r in
    let i = r.ref 0
    force_cache of map(s) of x =>
      i := !i + 1
      f(!i, x)
